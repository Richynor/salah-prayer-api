# API Settings
PORT=8000
ENVIRONMENT=production
SECRET_KEY=change-this-in-production-very-secret-key

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost/salah_prayer_api

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Settings
CELERY_LOG_LEVEL=info
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Flower Monitoring
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:changeme

# API Configuration
DEFAULT_COUNTRY=turkey
CACHE_TTL_HOURS=24
