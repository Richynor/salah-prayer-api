# =========== APPLICATION SETTINGS ===========
APP_NAME=Salah Prayer API
APP_VERSION=3.1.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# =========== SERVER SETTINGS ===========
HOST=0.0.0.0
PORT=8000
WORKERS=2
WEB_CONCURRENCY=2

# =========== CACHE SETTINGS ===========
CACHE_TTL_DAILY=3600
CACHE_TTL_MONTHLY=86400
CACHE_TTL_QIBLA=604800
IPHONE_CACHE_SIZE=1000
IPHONE_MAX_AGE=1440

# =========== SECURITY ===========
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# =========== DATABASE (OPTIONAL) ===========
# DATABASE_URL=postgresql://salah_api:salah_password@postgres:5432/salah_db
# POSTGRES_USER=salah_api
# POSTGRES_PASSWORD=salah_password
# POSTGRES_DB=salah_db
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432

# =========== REDIS (OPTIONAL) ===========
# REDIS_URL=redis://redis:6379/0
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# =========== MONITORING ===========
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# =========== DEVELOPMENT ONLY ===========
# RELOAD=true
# ACCESS_LOG=true
