# ========================================
# Prayer Times API - Environment Configuration
# ========================================

# Application Settings
APP_NAME=Salah Prayer API
APP_VERSION=3.2.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=info

# Security Settings
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=120

# Cache Optimization (Battery & Memory)
IPHONE_CACHE_SIZE=1000
IPHONE_MAX_AGE=1440

# Cache TTL Settings (seconds) - Optimized for battery life
CACHE_TTL_DAILY=3600          # 1 hour - Daily prayer times
CACHE_TTL_MONTHLY=604800       # 7 days - Bulk monthly times (15 months)
CACHE_TTL_QIBLA=2592000        # 30 days - Qibla direction

# Railway Auto-Provides:
# - PORT (dynamic port assignment)
# - RAILWAY_ENVIRONMENT
# - RAILWAY_PROJECT_ID
# - RAILWAY_SERVICE_ID
