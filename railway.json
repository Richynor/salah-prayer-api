{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --no-cache-dir -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 5,
    "healthcheckInterval": 30
  },
  "services": [
    {
      "name": "api",
      "type": "web",
      "command": "web",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 5,
      "healthcheckInterval": 30,
      "minReplicas": 1,
      "maxReplicas": 2
    },
    {
      "name": "celery-worker",
      "type": "worker",
      "command": "worker",
      "replicas": 1,
      "healthcheck": {
        "type": "tcp",
        "port": 8000,
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    },
    {
      "name": "celery-beat",
      "type": "worker",
      "command": "beat",
      "replicas": 1
    }
  ]
}
